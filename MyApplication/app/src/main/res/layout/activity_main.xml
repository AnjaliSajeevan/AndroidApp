<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7998cc"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100sp"
        android:text="Hello from Anjali!"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:text="Click to change text colour"
        android:layout_marginBottom="100sp"
        android:background="#765fb0"
        android:textSize="20sp"
        android:padding="10sp"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        />
    <TextView
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:text="Click to change background colour"
        android:layout_marginBottom="40sp"
        android:background="#765fb0"
        android:textSize="20sp"
        android:padding="10sp"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        />

    <TextView
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:text="Click to change text"
        android:layout_marginBottom="160sp"
        android:background="#765fb0"
        android:textSize="20sp"
        android:padding="10sp"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>